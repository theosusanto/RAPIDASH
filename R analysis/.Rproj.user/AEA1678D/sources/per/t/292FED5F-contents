p <- p + theme_bw()
p <- p + theme(axis.text.x = element_text(size=7, angle = 90, hjust = 1), 
               axis.text.y = element_text(size=16, face="bold"))
ggsave("is_mTOR_te_rna.jpeg", plot=p, device="jpeg")

