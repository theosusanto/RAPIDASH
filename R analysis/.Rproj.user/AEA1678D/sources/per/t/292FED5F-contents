v_rna <- voom(expr_rna, design_rna, plot=TRUE)
v_rna

vfit_rna <- lmFit(v_rna, design_rna)
vfit_rna <- contrasts.fit(vfit_rna, contrasts=contr.matrix_rna)
efit_rna <- eBayes(vfit_rna)
