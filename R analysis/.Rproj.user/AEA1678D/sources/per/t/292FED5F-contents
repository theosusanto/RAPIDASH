geneset_indices <- which(geneset_sizes>=10 & geneset_sizes<500)

for(i in 1:length(cont_vec_te)){
  name <- cont_vec_te[i]
  camera_results_file <- paste("camera", "_", name, "_", gmt_file_name, ".txt", sep="")
  
